<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dani.controlesnake.MainActivity">

    <Button
        android:id="@+id/btnCima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cima"
        android:background="@drawable/background"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="142dp"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/btnEsquerda"
        android:layout_alignLeft="@+id/btnBaixo"
        android:layout_alignStart="@+id/btnBaixo" />

    <Button
        android:id="@+id/btnBaixo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baixo"
        android:background="@drawable/background"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="363dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/btnDireita"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnEsquerda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esquerda"
        android:background="@drawable/background"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="250dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <Button
        android:id="@+id/btnDireita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direita"
        android:background="@drawable/background"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="250dp"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignBaseline="@+id/btnEsquerda"
        android:layout_alignBottom="@+id/btnEsquerda"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snake Gameduino"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />
</RelativeLayout>
